<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="action_patient_allergy" model="ir.actions.act_window">
            <field name="name">Allergies</field>
            <field name="res_model">hospital.patient.allergy</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="patient_allergy_list_view" model="ir.ui.view">
            <field name="name">patient.allergy.tree</field>
            <field name="model">hospital.patient.allergy</field>
            <field name="arch" type="xml">
                <list  string="Allergies">
                    <field name="name" string="Name"/>
                </list>
            </field>
        </record>

        <record id="patient_allergy_form_view" model="ir.ui.view">
            <field name="name">patient.allergy.form</field>
            <field name="model">hospital.patient.allergy</field>
            <field name="arch" type="xml">
                <form string="Allergy">
                    <sheet>
                        <group>
                            <field name="name" string="Name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>