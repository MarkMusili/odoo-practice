<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_hospital_appointment" model="ir.actions.act_window">
            <field name="name">Appointments</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">list,form,kanban,calendar,pivot</field>
        </record>

        <record id="hospital_appointment_list_view" model="ir.ui.view">
            <field name="name">hospital.appointment.tree</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <list string="Appointments"
                        decoration-muted="state == 'draft'"
                        decoration-info="state == 'confirmed'"
                        decoration-success="state == 'done'"
                        decoration-danger="state == 'cancelled'">
                    <field name="name" string="Reference"/>
                    <field name="patient_id" string="Patient"/>
                    <field name="doctor_id" string="Doctor"/>
                    <field name="date" string="Date"/>
                    <field name="state" string="Status" widget="badge"
                        decoration-muted="state == 'draft'"
                        decoration-info="state == 'confirmed'"
                        decoration-success="state == 'done'"
                        decoration-warning="state == 'cancelled'"
                    />
                </list>
            </field>
        </record>

        <record id="hospital_appointment_form_view" model="ir.ui.view">
            <field name="name">hospital.appointment.form</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <form string="appointment">
                    <header>
                        <button name="confirm" string="Confirm" type="object" class="btn-primary" invisible="state != 'draft'"/>
                        <button name="done" string="Mark Done" type="object" class="btn-success" invisible="state != 'confirmed'"/>
                        <button name="cancel" string="Cancel" type="object" class="btn-warning" invisible="state in ('done','cancelled')"/>
                        <button name="reset_to_draft" string="Reset to Draft" type="object" invisible="state == 'draft'"/>
                        <button name="consult" string="Consult" type="object" class="btn-info" invisible="state != 'confirmed'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done,cancelled"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Reference"/>
                                <field name="patient_id" string="Patient"/>
                                <field name="doctor_id" string="Doctor"/>
                            </group>
                            <group>
                                <field name="reason" string="Reason for visit"/>
                                <field name="date" string="Date"/>
                            </group>
                            <notebook>
                                <page string='Notes'>
                                    <field name="notes" string="Notes"/>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                    <chatter open_attachments="True"/>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="appointments_calendar_view">
            <field name="name">hospital.appointment.calendar</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <calendar date_start="date" string="Appointments" mode="month">
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name='doctor_id'/>
                </calendar>
            </field>
        </record>

        <record model="ir.ui.view" id="appointments_kanban_view">
            <field name="name">hospital.appointment.kanban</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" groups_draggable="True" group_create="False">
                    <templates>
                        <t t-name="card">
                            <strong>Reference:</strong> <field name="name"/>
                            <div><strong>Doctor:</strong> <field name="doctor_id"/></div>
                            <div><strong>Date:</strong> <field name="date"/></div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="appointments_pivot_view">
            <field name="name">hospital.appointment.pivot</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="doctor_id" type="row"/>
                    <field name="date" type="col" interval="month"/>
                    <field name="date" type="col"/>
                    <field name="id" type="mesure"/>
                </pivot>
            </field>
        </record>

    </data>
</odoo>