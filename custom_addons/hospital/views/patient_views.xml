<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="action_hospital_patient" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="hospital_patient_list_view" model="ir.ui.view">
            <field name="name">hospital.patient.tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <list string="Patients">
                    <field name="name" string="Name"/>
                    <field name="age" string="Age"/>
                    <field name="gender" string="Gender"/>
                    <field name="phone" string="Phone"/>
                    <field name="email" string="Email"/>
                    <field name="state" string="Status" widget="badge"
                        decoration-muted="state == 'new'"
                        decoration-info="state == 'under_treatment'"
                        decoration-success="state == 'discharged'"
                        decoration-primary="state == 'admitted'"
                        decoration-warning="state == 'deceased'"
                    />
                    <field name="date_of_birth" string="Date of birth" optional='hide'/>
                </list>
            </field>
        </record>

        <record id="hospital_patient_form_view" model="ir.ui.view">
            <field name="name">hospital.patient.form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form string="Patient">
                    <header>
                        <button name="admitted" string="Admit" type="object" class="btn-info"/>
                        <button name="under_treatment" string="Active" type="object" class="btn-primary"/>
                        <button name="discharged" string="Discharge" type="object" class="btn-success"/>
                        <button name="deceased" string="Deceased" type="object" class="btn-warning"/>
                        <button name="book_appointment" string="Book An Appointment" type="object" class="btn-primary" icon="fa-calendar"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,under_treatment,admitted,discharged,deceased"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                                <field name="appointment_count" widget="statinfo" string="Appointments"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" string="Name" />
                                <field name="gender" string="Gender"/>
                                <field name="date_of_birth" string="Date of birth"/>
                                <field name="age" string="Age"/>
                                <field name="email" string="Email" widget="email"/>
                                <field name="phone" string="Phone" widget="phone"/>
                                <field name="address" string="Address"/>
                            </group>
                            <group>
                                <field name="photo" widget='image' class="oe_avatar" string="Patient Photo"/>
                                <field name="allergies" string="Allergies"/>
                                <field name="blood_type" string="Blood Type"/>
                                <field name="chronic_conditions" string="Chronic Conditions"/>
                                <field name="emergency_contact" string="Emergency Contact"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Patient Medical records">
                                <tree delete="false">
                                    <field name="consultation_ids" string="EMR" options="{'no_delete': True}"/>
                                </tree>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter open_attachments="true"/>
                </form>
            </field>
        </record>

    </data>
</odoo>