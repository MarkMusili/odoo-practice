<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="action_hospital_patient" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="hospital_patient_list_view" model="ir.ui.view">
            <field name="name">hospital.patient.tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <list string="Patients">
                    <field name="image_128" widget="image" string="Photo"
                    options="{'size': [24, 24]'img_class': 'o_avatar rounded'}" width="30" nolabel="1"
                    class="oe_avatar"/>
                    <field name="name" string="Name" class="o_text_overflow"/>
                    <field name="age" string="Age"/>
                    <field name="gender" string="Gender"/>
                    <field name="phone" string="Phone"/>
                    <field name="email" string="Email"/>
                    <field name="date_of_birth" string="Date of birth" optional='hide'/>
                </list>
            </field>
        </record>

        <record id="hospital_patient_form_view" model="ir.ui.view">
                <field name="name">hospital.patient.form</field>
                <field name="model">hospital.patient</field>
                <field name="arch" type="xml">
                    <form string="Patient">
                        <header>
                            <button name="book_appointment" string="Book An Appointment" type="object" class="btn-primary" icon="fa-calendar"/>
                        </header>
                        <sheet>
                            <div class="oe_button_box" name="button_box">
                                <button name="action_view_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                                    <field name="appointment_count" widget="statinfo" string="Appointments"/>
                                </button>
                            </div>
                            <div class="d-flex flex-row justify-content-between oe_title">
                                <div class="oe_title_text">
                                    <h1>
                                        <field name="name" placeholder="Patient Name"/>
                                    </h1>
                                    <div class="o_subtitle text-muted">
                                        <field name="age"/> years old â€¢ <field name="gender"/>
                                    </div>
                                </div>
                                <field name="image_1920" widget="contact_image" string="Patient Photo" options="{'size': [130, 130]}"/>
                            </div>
                            <group>
                                <group string="Personal Information">
                                    <field name="gender" widget="radio" options="{'horizontal': true}"/>
                                    <field name="date_of_birth" widget="date"/>
                                    <field name="age" readonly="1"/>
                                    <field name="blood_type" widget="selection"/>
                                </group>
                                <group string="Contact Information">
                                    <field name="email" widget="email"/>
                                    <field name="phone"  widget="phone"/>
                                    <field name="address" widget="text"/>
                                    <field name="emergency_contact" widget="phone"/>
                                </group>
                            </group>

                            <group>
                                <group string="Allergies">
                                    <field name="allergies" widget="many2many_tags"
                                        options="{'color_field': 'color'}"/>
                                </group>
                                <group string="Chronic Conditions">
                                    <field name="chronic_conditions" widget="many2many_tags"
                                        options="{'color_field': 'color'}"/>
                                </group>
                            </group>

                            <notebook>
                                <page string="Medical Records" name="medical_records">
                                    <field name="consultation_ids" string="Medical Records" options="{'no_delete': True}"/>
                                </page>
                            </notebook>
                        </sheet>
                        <chatter open_attachments="true"/>
                    </form>
                </field>
        </record>
    </data>
</odoo>