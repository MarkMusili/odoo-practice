<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="action_hospital_patient" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="hospital_patient_list_view" model="ir.ui.view">
            <field name="name">hospital.patient.tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <list string="Patients">
                    <field name="name" string="Name"/>
                    <field name="age" string="Age"/>
                    <field name="gender" string="Gender"/>
                    <field name="phone" string="Phone"/>
                    <field name="email" string="Email"/>
                    <field name="date_of_birth" string="Date of birth" optional='hide'/>
                    <field name="active" string="Active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

    <record id="hospital_patient_form_view" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                    <button name="book_appointment" string="Book An Appointment" type="object" class="btn-primary" icon="fa-calendar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="appointment_count" widget="statinfo" string="Appointments"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Patient Name" class="o_text_overflow"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Personal Information">
                            <field name="photo" widget="image" class="oe_avatar" string="Patient Photo"/>
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                            <field name="age"/>
                            <field name="blood_type"/>
                        </group>
                        <group string="Contact Information">
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                            <field name="address"/>
                            <field name="emergency_contact"/>
                        </group>
                    </group>

                    <group>
                        <group string="Allergies">
                            <field name="allergies" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group string="Chronic Conditions">
                            <field name="chronic_conditions" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Medical Records" name="medical_records">
                            <tree delete="false" editable="bottom">
                                <field name="consultation_ids" string="Medical Records" options="{'no_delete': True}"/>
                            </tree>
                        </page>
                    </notebook>
                </sheet>
                <chatter open_attachments="true"/>
            </form>
        </field>
    </record>

    </data>
</odoo>